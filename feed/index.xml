<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/">
	<channel>
		<title>{{ site.title }} Â· {{ site.tagline }}</title>
		<description>{% if site.description %}{{ site.description | xml_escape }}{% endif %}</description>		
		<link>{{ site.url }}</link>
		<atom:link href="{{ site.url }}/feed" rel="self" type="application/rss+xml" />
		{% for post in site.posts limit:99999 %}
			<item>
				<title>{{ post.title | xml_escape }}</title>
				{% if post.author.name %}
					<dc:creator>{{ post.author.name | xml_escape }}</dc:creator>
				{% endif %}        
				{% if post.excerpt %}
					<description>{{ post.excerpt | xml_escape }}</description>
                    <content><![CDATA[{{ post.content | xml_escape }}]]></content>
				{% else %}
					<description>{{ post.content | xml_escape }}</description>
                    <content><![CDATA[{{ post.content | xml_escape }}]]></content>
				{% endif %}
				<pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
				<link>{{ site.url }}{{ post.url }}</link>
				<guid isPermaLink="false">{{ site.url }}{{ post.url }}</guid>
                <source>{{ site.title | xml_escape }}</source>
			</item>
		{% endfor %}
	</channel>
</rss>